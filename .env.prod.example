# Copy this file to .env.prod and fill in the values
# Usage: docker compose -f docker-compose.prod.yml --env-file .env.prod up -d

# Domain & SSL
# Your domain name (e.g., jenkins-connector.ase.cit.tum.de)
DOMAIN_NAME=jenkins-connector.example.com

# Email for Let's Encrypt certificate expiry notifications
ACME_EMAIL=your-email@example.com

# Docker Image
# Where to pull the image from
DOCKER_REGISTRY=ghcr.io/ls1intum

# Which version to deploy
IMAGE_TAG=latest

# Database
POSTGRES_DB=jenkins_connector
POSTGRES_USER=jenkins_connector
POSTGRES_PASSWORD=change-me-to-a-secure-password

# Jenkins Connection
JENKINS_URL=https://jenkins.example.com
JENKINS_USERNAME=your-jenkins-user
JENKINS_API_TOKEN=your-jenkins-api-token